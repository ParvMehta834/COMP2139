@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Smart Inventory System</h1>
    <p>Manage your inventory, track orders, and more!</p>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Inventory Management</h5>
                <p class="card-text">Manage products and categories.</p>
                <a href="/Products" class="btn btn-primary">Go to Inventory</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Search and Filtering</h5>
                <p class="card-text">Search and filter products.</p>
                <a href="/Products/Search" class="btn btn-primary">Search Products</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Guest Order Tracking</h5>
                <p class="card-text">Track and place orders as a guest.</p>
                <a href="/Orders" class="btn btn-primary">Track Orders</a>
            </div>
        </div>
    </div>
</div>

