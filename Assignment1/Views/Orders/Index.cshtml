@model IEnumerable<Assignment1.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Order</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>Order ID</th>
        <th>Guest Name</th>
        <th>Guest Email</th>
        <th>Order Date</th>
        <th>Total Price</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.GuestName</td>
            <td>@order.GuestEmail</td>
            <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
            <td>@order.TotalPrice.ToString("C")</td>
            <td>
                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>